    "version": "0.2.0",
    "configurations": [

        {
            "type": "node",
            "request": "attach",
            "name": "Attach to NestJS Docker",
            "port": 9929, // The port that the debugger will attach to
            "address": "localhost", // The address of the Docker container
            "restart": true, // Restart the debugger when the application restarts
            "sourceMaps": true, // Enable source maps
            "localRoot": "${workspaceFolder}", // The local folder that contains the source code
            "remoteRoot": "/usr/src/app", // The remote folder in the Docker container
        }
    ]
}